    <th>№</th>
    <th>ФИО обучающегося</th>
    <th>Класс / группа</th>
    <th>Баланс</th>
    </thead>
    <tbody>
    {% for info in pupils %}
        <tr>
            <td class='center'>{{ loop.index }}</td>
            <td><a target="_blank" href="{{ path('boss_balance_detail', {
                    'user_id': info['user_id'],
                    'date_from': date_from,
                    'date_to': date_to,
                    'acr_id': '-1'
                }) }}" style="background-color: unset; color: #000;">{{ info['name'] }}</a></td>
