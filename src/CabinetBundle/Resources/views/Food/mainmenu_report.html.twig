<table class='table table-striped table-simple table-cabinet table-markered'>
    <thead>
        <th>Наименование</th>
        <th>Цена, руб.</th>
        <th>Кол-во, шт.</th>
        <th>Вес,г</th>
        <th>Белки, г</th>
        <th>Жиры, г</th>
        <th>Углеводы, г</th>
        <th>Калории, калл</th>
    </thead>
    <tbody>
        <tr><td colspan='8' class='table-title'>Комплексы</td></tr>
        {% for complex in all_complex_on_date %}
            {% set idx = loop.index0 %}
        <tr>
            <td class='table-subtitle'>{{ idx+1 }}. {{ complex.name }}</td>
            <td class='center'>{{ complex.COST }}</td>
            <td class='center'></td><td class='center'></td>
            <td class='center'></td><td class='center'></td>
            <td class='center'></td><td class='center'></td>
        </tr>
            {% for detail in details_of_complex[idx] %}
            <tr>
                <td>{{ detail.name }}</td>
                <td></td>
                <td class='center'>1</td>
                <td class='center'>{{ detail.WGHT }}</td>
                <td class='center'>{{ detail.PROTEIN }}</td>
                <td class='center'>{{ detail.FAT }}</td>
                <td class='center'>{{ detail.CARB }}</td>
                <td class='center'>{{ detail.KKAL }}</td>
            </tr>
            {% endfor %}
        {% endfor %}

        <tr><td colspan='8' class='table-title'>Отдельные блюда</td></tr>
        {% for group in all_groups_of_meal %}
            {% set idx = loop.index0 %}
            <tr><td colspan='8' class='table-subtitle' style='text-align: left;'>{{ idx+1 }}. {{ group.NAME }}</td></tr>
            {% for meal in meals_of_group[idx] %}
            <tr>
                <td>{{ meal.name }}</td>
                <td>{{ meal.cost }}</td>
                <td></td>
                <td>{{ meal.WGHT }}</td>
                <td>{{ meal.PROTEIN }}</td>
                <td>{{ meal.FAT }}</td>
                <td>{{ meal.CARB }}</td>
                <td>{{ meal.KKAL }}</td>
            </tr>
            {% endfor %}
        {% endfor %}
    </tbody>
</table>
